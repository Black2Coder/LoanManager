<%- include('./base.ejs') %>

  
  
<div class="container mt-4">
  <table class="table">
    <thead class="thead-dark">
      <tr style="text-align: center;">
        <th scope="col">ID</th>
        <th scope="col">CustomerName</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Amount</th>
        <th scope="col">Adhaar</th>
        <th scope="col">Status</th>
        <th scope="col" colspan="2">Action</th>
      </tr>
    </thead>
    <tbody>
      
      <% for(let i=0; i<loans.length; i++){ %>
        <tr>
          <th>
            <%= loans[i].id %>
          </th>
          <th>
            <%= loans[i].customername %>
          </th>
          <th>
            <%= loans[i].email %>
          </th>
          <th>
            <%= loans[i].phone %>
          </th>
          <th>
            <%= loans[i].amount %>
          </th>
          <th>
            <%= loans[i].pancard %>
          </th>
          <th>
            <%= loans[i].status %>
          </th>
          <form action="" method="get" autocomplete="off">
            <th>
              <select name="status" id="">
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
              </select>
            </th>
            <input type="hidden" name="emailhide" value="<%= loans[i].email %>">
            <input type="hidden" name="hidden" value="<%= loans[i].id %>">
            <th><button type="submit" class="btn btn-primary">update</button></th>
          </form>
        </tr>
        <% } %>
    </tbody>
  </table>
  </div>
