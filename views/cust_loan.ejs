<%- include('./base.ejs') %>

  <div class="container row mx-auto mt-md-4" style="width: 40rem;">
    <form action="" method="GET" class="col">
      <div class="form-group">
        <input type="text" name="search" id="filter" onkeyup="searchFun()" class="form-control" id="" placeholder="Filter by Loan-ID">
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
    <form action="" class="col">
      <div class="form-check">
        <input type="checkbox" class="form-check-input" name="approved" value="Approved" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Approved</label><br>
        <input type="checkbox" class="form-check-input" name="rejected" value="Rejected" id="exampleCheck2">
        <label class="form-check-label" for="exampleCheck2">Rejected</label><br>
        <input type="checkbox" class="form-check-input" name="new" value="New" id="exampleCheck3">
        <label class="form-check-label" for="exampleCheck3">New</label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
  
<div class="container mt-4">
  <table class="table" id="mytable">
    <thead class="thead-dark">
      <tr style="text-align: center;">
        <th scope="col">ID</th>
        <th scope="col">CustomerName</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Amount</th>
        <th scope="col">Adhaar</th>
        <th scope="col">Status</th>
        <th scope="col">Action</th>
  
      </tr>
    </thead>
    <tbody>
      
      <% for(let i=0; i<loans.length; i++){ %>
        <tr>
          <th>
            <%= loans[i]._id %>
          </th>
          <th>
            <%= loans[i].customername %>
          </th>
          <th>
            <%= loans[i].email %>
          </th>
          <th>
            <%= loans[i].phone %>
          </th>
          <th>
            <%= loans[i].amount %>
          </th>
          <th>
            <%= loans[i].adhar %>
          </th>
          <th>
            <%= loans[i].status %>
          </th>
          <form action="" method="get" autocomplete="off">
            
            <input type="hidden" name="emailhide" value="<%= loans[i].email %>">
            <input type="hidden" name="hidden" value="<%= loans[i]._id %>">
            <th><button type="submit" class="btn btn-primary">cancel</button></th>
          </form>
        </tr>
        <% } %>
    </tbody>
  </table>
